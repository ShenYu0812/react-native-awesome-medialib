{
    "extends": [
        "@react-native-community",
        "5e"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        "react-native/no-inline-styles": 0,
        "@typescript-eslint/no-require-imports": 1,
        "camelcase": 0,
        "@typescript-eslint/naming-convention": 0
    }
}
